generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Category {
  id      Int      @id @default(autoincrement())
  name    String   // Tên danh mục
  products Product[] // Quan hệ 1-n với bảng Product
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  stock       Int
  createdAt   DateTime @default(now())
  image       String   
  
  categoryId  Int?    // Thêm cột categoryId
  category    Category? @relation(fields: [categoryId], references: [id]) // Quan hệ với Category
}
model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   @default("user") // "admin" hoặc "user"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
